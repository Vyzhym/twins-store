include _button.pug

mixin item()
	article.item__card
		.item__card-new
			span Новинка
		.item__card-image
			a(href="/card.html")
				img(src="/img/items/search.png", alt="")
		.item__card-title
			a(href="/card.html")
				h2 Черная кожаная бананка с цепочкой
		.item__card-bottom
			.item__card-bottom__colors
				span.color(style="background-color: red;")
				span.color(style="background-color: blue;")
				span.color(style="background-color: black;")
				span.color(style="background-color: pink;")
				span.color(style="background-color: yellow;")
			.item__card-bottom__price
				span 425
				|
				| грн.

mixin itemPromotion(vars)
	article.item__card.item__card-promotion
		.item__card-image
			a(href="/card.html")
				img(src="/img/items/promotion.png", alt="")
		.item__card-title
			a(href="/card.html")
				h2 Черная кожаная бананка с цепочкой
		.item__card-bottom
			.item__card-bottom__colors
				span.color(style="background-color: red;")
				span.color(style="background-color: blue;")
				span.color(style="background-color: black;")
				span.color(style="background-color: pink;")
				span.color(style="background-color: yellow;")
			.item__card-bottom__price.price__promotion
				span.before 425 грн.
				span.after 425 грн.

mixin prizeItem()
	article.item__prize
		.item__prize-image
			img(src="/img/items/search.png", alt="")
		.item__prize-info
			.item__prize-info__title Подарочная банка
			.item__prize-info__description Lorem ipsum dolor sit amet consectetur adipisicing elit. Fugiat modi nobis non sunt assumenda in saepe aliquam asperiores. Quia soluta sint nostrum nobis eum quo, architecto laboriosam minus numquam quos?
			.item__prize-info__button
				+button('Добавить в корзину', '#', '#000')
